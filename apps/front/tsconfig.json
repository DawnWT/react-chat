{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@panda/*": [
        "./styled-system/*",
      ]
    }
  },
  "include": [
    "./src",
    "./styled-system",
    "vite.config.ts",
    "panda.config.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}